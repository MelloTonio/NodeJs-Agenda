<%- include('includes/head') %>
<%- include('includes/nav') %>
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 mt-3">
      <h1 class="text-center" style="margin-right: 40px;">Acesso a Área restrita</h1>
      <small><p class="text-center lead" style="margin-right: 40px;"><i>Faça seu login ou crie sua conta abaixo</i></p></small>
      <br>

      <<%- include('includes/messages') %>
      
     <div class="row " style="margin-right: 100px;">

         <div class="col-lg shadow p-3 mb-5 bg-light border border-dark" style="margin-left: 80px;">
            <h3 style="text-align: center;">Cadastro</h3><br>
            <form action="/login/register" method="POST">
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="form-group">
                  <label for="exampleInputEmail1">E-mail</label>
                  <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
                  <small id="emailHelp" class="form-text text-muted"></small>
                </div>
                <div class="form-group">
                  <label for="exampleInputPassword1">Senha</label>
                  <input type="password" class="form-control" id="exampleInputPassword1" name="senha">
                </div>
                <div style="text-align: center;"><button type="submit" class="btn btn-primary">Cadastrar-me</button></div>
              </form>
         </div>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

         <div class="col-lg shadow p-3 mb-5 bg-light border border-dark">
            <h3 style="text-align: center;">Login</h3><br>
            <form action="/login/isValid" method="POST">
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="form-group">
                  <label for="exampleInputEmail1">E-mail</label>
                  <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
                  <small id="emailHelp" class="form-text text-muted"> </small>
                </div>
                <div class="form-group">
                  <label for="exampleInputPassword1">Senha</label>
                  <input type="password" class="form-control" id="exampleInputPassword1" name="senha">
                </div>
                <div style="text-align: center;"><button type="submit" class="btn btn-primary">Logar</button></div>
              </form>
        </div>


     </div>


  </div>



    <div class="col-lg-2"></div>


    
  </div>
</div>
